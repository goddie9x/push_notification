<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/notification_title"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/notification_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/notification_title"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/notification_body"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/notification_body"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/notification_body"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/amount_notification"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        />
    <NumberPicker
        android:id="@+id/amount_notification"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="textStart"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Time interval"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        />
    <NumberPicker
        android:id="@+id/time_push_notification_interval"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="textStart"
        />
    <Button
        android:id="@+id/push_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/push_notification"
        />
</LinearLayout>